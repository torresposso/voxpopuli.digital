---
const { posts } = Astro.props;
type LatestProps = {
  featuredImage: { node: { mediaItemUrl: string } };
  title: string;
  excerpt: string;
  date: string;
};
---

<div class="max-w-5xl mx-auto px-4 grid lg:grid-cols-2 gap-6 my-5">
  {
    posts.map((post: LatestProps) => (
      <div class="flex justify-between rounded-lg overflow-hidden  h-32 ">
        <div class="flex flex-col justify-between w-2/3 p-3 text-white bg-gradient-to-b from-blue-900 to-blue-950">
          <h3 class="text-base lg:text-xl font-medium leading-tight">
            {post.title}
          </h3>
          <small class="capitalize text-xs">
            {new Intl.DateTimeFormat("es-CO", {
              weekday: "long",
              day: "numeric",
              month: "long",
            }).format(new Date(post.date))}
          </small>
        </div>
        <div
          class="w-1/3  bg-cover bg-center "
          style={{
            backgroundImage: `url('${post.featuredImage.node.mediaItemUrl}')`,
          }}
        />
      </div>
    ))
  }
</div>
