---
import type { PostViewModel } from "../lib/wp";

const { post } = Astro.props as {
    post: PostViewModel;
};
---

<article
    class="card image-full w-full aspect-video overflow-hidden rounded-xl group cursor-pointer shadow-lg hover:shadow-2xl transition-shadow duration-300"
>
    <figure class="w-full h-full">
        <img
            src={post.featuredImage?.url}
            alt={post.title}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110 hover:brightness-95"
        />
    </figure>
    <div
        class="card-body justify-end items-center text-center p-4 md:p-6 bg-linear-to-t from-black/80 via-black/20 to-transparent"
    >
        <div class="w-full">
            <h2
                class="card-title text-center text-lg md:text-xl font-bold text-white mb-2 line-clamp-2 leading-tight justify-center"
            >
                <a
                    href={`/articulos/${post.slug}`}
                    class="hover:text-primary transition-colors"
                >
                    {post.title}
                </a>
            </h2>
            <div
                class="text-gray-200 text-xs md:text-sm line-clamp-2 font-medium opacity-80"
                set:html={post.excerptHtml}
            />
        </div>
    </div>
</article>
