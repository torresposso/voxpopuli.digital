---
import { getLatestNonFeaturedPosts } from "../lib/wp";
import PostCard from "./PostCard.astro";

const posts = await getLatestNonFeaturedPosts(5);
---

<section class="container mx-auto p-4">
  <h2 class="text-2xl font-bold">Ahora</h2>

  <div
    class=" py-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6"
  >
    {posts.map((post) => (
            <PostCard post={post} />
        ))}
  </div>
</section>
