---
import type { PostViewModel } from "../lib/wp";

const { post } = Astro.props as {
    post: PostViewModel;
};
---

<a
    href={post.url}
    class="group block overflow-hidden rounded-2xl bg-base-100 shadow-sm transition-all duration-250 hover:-translate-y-1 hover:shadow-xl"
>
    <div class="relative aspect-video overflow-hidden">
        {
            post.featuredImage ? (
                <img
                    src={post.featuredImage.url}
                    alt={post.featuredImage.alt}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
            ) : (
                <div class="flex h-full w-full items-center justify-center bg-neutral/10">
                    <span class="text-neutral/30">No Image</span>
                </div>
            )
        }

        {
            post.categories?.[0] && (
                <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center rounded-full bg-white/90 px-3 py-1 text-xs font-bold uppercase tracking-wider text-primary shadow-sm backdrop-blur-sm">
                        {post.categories[0].name}
                    </span>
                </div>
            )
        }
    </div>

    <div class="p-6">
        <div
            class="mb-3 flex items-center gap-2 text-xs font-medium text-base-content/60"
        >
            <time datetime={post.publishedAt}>
                {
                    new Date(post.publishedAt).toLocaleDateString(undefined, {
                        month: "short",
                        day: "numeric",
                        year: "numeric",
                    })
                }
            </time>
            <span>â€¢</span>
            <span>{post.author.name}</span>
        </div>

        <h3
            class="mb-3 text-xl font-bold leading-tight transition-colors group-hover:text-primary font-montserrat line-clamp-2"
        >
            {post.title}
        </h3>

        <div
            class="text-sm leading-relaxed text-base-content/70 line-clamp-3 prose prose-sm max-w-none"
            set:html={post.excerptHtml}
        />

        <div
            class="mt-6 flex items-center gap-2 text-sm font-bold text-primary"
        >
            <span>Read Article</span>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 transition-transform group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path>
            </svg>
        </div>
    </div>
</a>

<style>
    .font-montserrat {
        font-family: var(--font-montserrat, "Montserrat", sans-serif);
    }
</style>
