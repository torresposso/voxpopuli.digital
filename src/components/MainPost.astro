---
import type { PostViewModel } from "../lib/wp";

const { post } = Astro.props as {
  post: PostViewModel;
};
---

<article
  class="card bg-base-200 w-full h-full group overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500"
>
  <figure class="w-full h-full">
    <img
      src={post.featuredImage?.url}
      alt={post.title}
      class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-105"
    />
  </figure>
  <div class="card-body p-4 md:p-10 space-y-2">
    <h2
      class="card-title text-3xl md:text-5xl font-extrabold tracking-tight leading-none text-balance drop-shadow-sm"
    >
      <a
        href={`/articulos/${post.slug}`}
        class="hover:text-primary transition-colors duration-300"
      >
        {post.title}
      </a>
    </h2>

    <div
      class="line-clamp-4 text-neutral-content"
      set:html={post.excerptHtml}
    />
  </div>
</article>
